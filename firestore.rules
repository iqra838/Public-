rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own data.
    // Any authenticated user can create a user document.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Anyone can submit a message (e.g., from the contact form),
    // but only authenticated users (admins) can read or delete them.
    // You would typically add more specific admin role checks here.
    match /messages/{messageId} {
      allow create: if request.resource.data.name != null && request.resource.data.email != null;
      allow read, update, delete: if request.auth != null;
    }

    // Fallback rule: by default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
